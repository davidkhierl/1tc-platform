# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON
[*.{js,jsx,mjs,ts,tsx,json,jsonc}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Package.json files
[package.json]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Python files (if any)
[*.py]
indent_size = 4

# Go files (if any)
[*.go]
indent_style = tab
